    "variables": [
      {
        "requires": "($desktop_screen and not ($container_title = 'origins.shulk_inventory'))",
        "$screen_content": "chest.small_chest_panel",
        "$screen_bg_content": "common.screen_background"
      },
      {
        "requires": "($pocket_screen and not ($container_title = 'origins.shulk_inventory'))",
        "$screen_content": "pocket_containers.small_chest_panel"
      },
      {
        "requires": "($container_title = 'origins.shulk_inventory')",
        "$screen_content": "origin_shulk_inventory.shulk_inventory_screen",
        "$screen_bg_content": "common.screen_background"
      }
    ]
  }

}